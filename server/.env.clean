# ==========================================
# DATABASE
# ==========================================
DATABASE_URL=postgresql://username:password@host:port/database

# ==========================================
# REDIS
# ==========================================
REDIS_URL=rediss://default:your-redis-password@your-redis-host:6379

# ==========================================
# JWT & SECURITY
# ==========================================
JWT_SECRET=your-secure-random-jwt-secret-key-here
JWT_EXPIRES_IN=60m

# ==========================================
# ENVIRONMENT & URLS
# ==========================================
NODE_ENV=development
DOMAIN=localhost
CLIENT_URL=http://localhost:5174
PLATFORM_URL=http://localhost:5173
NEW_PLATFORM_API_URL=http://localhost:3000/api

# ==========================================
# TWITTER OAUTH
# ==========================================
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_CONSUMER_KEY=your-twitter-consumer-key
TWITTER_CONSUMER_SECRET=your-twitter-consumer-secret
TWITTER_REDIRECT_URI=http://localhost:3002/api/twitter/callback
TWITTER_OAUTH1_CALLBACK_URL=http://localhost:3002/api/twitter/callback

# ==========================================
# AI SERVICES
# ==========================================
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
PERPLEXITY_API_KEY=your-perplexity-api-key-here
