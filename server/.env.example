# Environment Configuration
NODE_ENV=development
PORT=3002

# Client URL
CLIENT_URL=http://localhost:5174

# Platform Integration (Updated for cookie-based auth)
PLATFORM_URL=http://localhost:5173
PLATFORM_API_KEY=http://localhost:3000
TWEET_GENIE_URL=http://localhost:3002

# Database Configuration (URL-based for production)
DATABASE_URL=postgresql://username:password@host:port/database
# Legacy individual parameters (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tweet_genie
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false

# Redis Configuration (Upstash for production)
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token
# Legacy Redis configuration (for local development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Twitter API Configuration (for app-level functionality)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# AI Provider Configuration
OPENAI_API_KEY=your_openai_api_key
PERPLEXITY_API_KEY=your_perplexity_api_key
GOOGLE_AI_API_KEY=your_google_ai_api_key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Scheduling Configuration
MAX_SCHEDULED_TWEETS_PER_USER=100
TIMEZONE_DEFAULT=UTC
DB_SCHEDULED_TWEET_WORKER_POLL_MS=10000
DB_SCHEDULED_TWEET_WORKER_BATCH_SIZE=10
DB_SCHEDULED_TWEET_WORKER_RECOVERY_INTERVAL_MS=60000

# Database pool tuning (important for Supabase pooler stability)
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT_MS=30000
DB_POOL_CONNECTION_TIMEOUT_MS=10000
DB_POOL_MAX_USES=7500
DB_STATEMENT_TIMEOUT_MS=30000
DB_QUERY_TIMEOUT_MS=30000
DB_QUERY_MAX_RETRIES=1
DB_QUERY_RETRY_DELAY_MS=250

# Background Workers (set false on API-only instances)
BACKGROUND_WORKERS_ENABLED=true
START_DB_SCHEDULER_WORKER=true
START_ANALYTICS_WORKER=true
START_AUTOPILOT_WORKER=false

# Analytics auto sync tuning
ANALYTICS_AUTO_SYNC_ENABLED=true
ANALYTICS_AUTO_SYNC_INTERVAL_MS=900000
ANALYTICS_AUTO_SYNC_INITIAL_DELAY_MS=60000
ANALYTICS_AUTO_SYNC_USER_BATCH=5
ANALYTICS_AUTO_SYNC_CANDIDATE_LIMIT=8
ANALYTICS_AUTO_SYNC_FORCE_REFRESH_COUNT=3

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Cookie configuration
# Development: No domain set (defaults to localhost)
# Production: Uses .suitegenie.in domain automatically
